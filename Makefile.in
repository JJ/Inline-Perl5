.PHONY: all clean test install
CC = %cc%
RM = %rm%
PERL6 = %perl6%

all: %p5helper%
clean:
	$(RM) "%p5helper%"
	rmdir resources/libraries
	rmdir resources
	$(RM) Makefile
%p5helper%: p5helper.c
	$(CC) -Wall p5helper.c %perlopts% -shared -o "%p5helper%" -fPIC -g
test: all
	prove -e "$(PERL6) -Ilib" t
install: all
	$(PERL6) configure.pl6 --install
